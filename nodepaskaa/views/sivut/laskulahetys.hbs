  <div class="asd">
    {{#each tiedot as | item i|}}
    <h3>LASKU {{this.lahetyspvm}}</h3>
    <p>================================</p>
    <h4>Mainoskampanjan myyjä: </h4>
    <p>{{this.myyjä}}</p>
    <p>I-Flac Oy</p>
    <p>Korkeakoulunkatu 6, 33720</p>

    <br>
    <h4>Mainoskampanjan tilaaja:</h4>
    <p>{{this.tilaaja}}</p>
    <p>{{this.mainostaja}}</p>
    <p>{{this.katuosoite}}, {{this.postinumero}}</p>
    <br>
    <h4>Laskutettava mainoskampanja:</h4>
    <p>---------------------------------</p>
    <p>{{this.kampanja}} {{this.alkupvm}}-{{this.loppupvm}}</p>
    <p>Sekuntihinta: {{this.sekuntihinta}}€/s</p>
    <p>Määrärahat: {{this.maararahat}}€</p>
    <h4>Esitetyt mainokset:</h4>
    <p>---------------------------------</p>
      {{#each this.mainokset as |yval ykey |}}
      <p>Mainos {{@index}}: {{this.nimi}}</p>
      <p>Lähetysaika: {{yval.esitysaika}}</p>
      <p>Mainoksen pituus:{{yval.pituus}}</p>
      {{#if yval.kuuntelukerrat}}
      <p>Vastaanotettu:{{yval.kuuntelukerrat}} kertaa</p>
      {{else}}
      <p>Vastaanotettu: 0 kertaa</p>
      {{/if}}
      {{#if yval.mainoksen_hinta}}
      <p>Mainoksen hinta:{{yval.mainoksen_hinta}}  €/s</p>
      {{else}}
      <p>Mainoksen hinta: 0 €/s</p>
      {{/if}}
      <br>
      {{/each}}
      <button type="button" name="button" onclick="myfunction({{this.tila}})">paina mua</button>

    {{/each}}

  </div>
