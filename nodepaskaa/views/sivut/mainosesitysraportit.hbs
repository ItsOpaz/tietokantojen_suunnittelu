<style>
    .ylabaari {
        list-style-type: none;
        margin: 10;
        padding-bottom: 10;
        overflow: hidden;
        background-color: rgb(44, 44, 44);
    }

    a {
        color: white;
    }

    li.ylabaari {
        float: left;
    }

    table {
        padding: 10;
        margin: 10;
        table
    }

    table td {
        padding: 10;
    }

    h5 {
        color: green;
    }
</style>

<script>
    const handleClick = () => {
        setTimeout(() => {
            document.getElementById("msgSent").innerHTML = ""
        }, 2000)
        document.getElementById("msgSent").innerHTML = "Sähköposti lähetetty!"
    }
</script>

<div class="m-root">

    <ul class="ylabaari">
        <li class="ylabaari"><a href="/">Etusivu</a> <br></li>
        <li class="ylabaari"><a href="/mainokset">mainokset</a> <br></li>
        <li class="ylabaari"><a href="/kampanjat">Mainoskampanjat</a> <br></li>
    </ul>

    </ul>

    <div>
        {{#with info}}
        <h3>Mainostaja: {{mainostaja}}</h3>
        <h3>Mainoskampanja: {{kampanja}}</h3>
        <h3>Mainos: {{mainos}}</h3>
        {{/with}}

    </div>
    <p>----------------------------------------------------------------------</p>

    <h4>{{empty.msg}}</h4>
    <table border="1">
        <tr>
            <td>esityspäivä</td>
            <td>esitysaika</td>
            <td>juridinen sukupuoli</td>
            <td>ikä</td>
            <td>maa</td>
            <td>paikkakunta</td>
        </tr>

        {{#each data}}
        <tr>
            <td>{{this.pvm}}</td>
            <td>{{this.kloaika}}</td>
            <td>{{{this.sukupuoli}}}</td>
            <td>{{{this.ika}}}</td>
            <td>{{{this.maa}}}</td>
            <td>{{{this.paikkakunta}}}</td>
        </tr>
        {{/each}}
    </table>


    <br>
    <h5 id="msgSent"></h5>
    <label for="sapo">Asiakkaan sähköposti: </label>
    <input type="text" name="sapo" value="{{sapo}}" id="">
    <button onclick="handleClick()">Lähetä raportti</button>
</div>